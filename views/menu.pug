// menu bar
nav.navbar.justify-content-between
  ul.nav
    li.nav-item
      a.nav-link(href='/') Home
    li.nav-item
      a.nav-link(href='/firetools') FireTools
    li.nav-item
      a.nav-link(href='/about') About
  if session.authenticated
    p Logged in as #{session.email} <a href="/logout">Logout</a>
  if !session.authenticated
    form.form-inline(method='post',action='/login')
      input.form-control.mr-sm-2(type='text',placeholder="email",name='email')
      input.form-control.mr-sm-2(type='password',name='password')
      button.btn.my-2.my-sm-2(type='submit') Login
